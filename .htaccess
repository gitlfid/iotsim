RewriteEngine On

# 1. Jika user mengakses file dengan .php (misal: login.php), redirect ke versi tanpa .php (misal: /login)
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.php [NC]
RewriteRule ^ %1 [R=301,L]

# 2. Jika user mengakses URL tanpa ekstensi, arahkan secara internal ke file .php yang sesuai
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([^\.]+)$ $1.php [NC,L]